void push(int ar[],int n)
{
	static int count=0;
	for(int i=0;i<n;i++)
	{
		if(ar[i]!=0)
		{
			ar[count++]=ar[i];
		}
	}
	while(count<n)
	{
		ar[count++]=0;
	}
}
